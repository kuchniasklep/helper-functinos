{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2018",
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "removeComments": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
